# Rules Evaluator Environment Variables
# Copy this file to .env and fill in your actual API keys and credentials

# Required: OpenAI API key for embeddings and AI providers
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Additional AI providers
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
GROK_API_KEY=xai-your-grok-api-key-here

# Optional: Cloud storage credentials (only needed if using cloud content sources)

# Google Drive - requires service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account.json

# OneDrive - requires Azure app registration
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret
ONEDRIVE_TENANT_ID=your-azure-tenant-id

# Dropbox - requires access token
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token

# Development settings (optional)
LOG_LEVEL=INFO
CACHE_ENABLED=true